<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UTS</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Daftar Anggota</h1>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Nama</th>
            <th>Alamat</th>
            <th>No Telp</th>
            <th>Email</th>
            <th>Tanggal Bergabung</th>
            <th>Status Keanggotaan</th>
            <th>Aksi</th>
        </tr>
        <% anggota.forEach(anggota => {%>
        <tr>
            <td><%= anggota.id %></td>
            <td><%= anggota.nama_anggota %></td>
            <td><%= anggota.alamat %></td>
            <td><%= anggota.no_telp %></td>
            <td><%= anggota.email %></td>
            <td><%= anggota.tgl_join %></td>
            <td><%= anggota.status %></td>
            <td>
                <a href="/edit/<%= anggota.id %>">Edit</a> |
                <a href="/delete/<%= anggota.id %>">Hapus</a>
            </td>
        </tr>
        <% })%>
    </table>

    <h2>Tambah</h2>
    <form action="/add" method="post">
        <label for="nama_anggota">Nama :</label>
        <input type="text" id="nama_anggota" name="nama_anggota"><br>
        <label for="alamat">Alamat :</label>
        <input type="text" id="alamat" name="alamat"><br>
        <label for="no_telp">No Telp :</label>
        <input type="text" id="no_telp" name="no_telp"><br>
        <label for="email">Email :</label>
        <input type="email" id="email" name="email"><br>
        <label for="tgl_join">Tanggal Bergabung :</label>
        <input type="date" id="tgl_join" name="tgl_join"><br>
        <label for="status">Status :</label>
        <input type="text" id="status" name="status"><br>
        <button type="submit">Tambah</button>
    </form>
</body>
</html>